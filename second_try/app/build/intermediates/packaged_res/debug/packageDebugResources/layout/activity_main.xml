<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F6F1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Профиль и Приветствие -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <!-- Картинка профиля -->
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_profile"
                android:background="@drawable/circle_shape"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp" />

            <!-- Приветствие -->
            <TextView
                android:id="@+id/greetingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Добрый день, Пользователь"
                android:textSize="20sp"
                android:textColor="#333333"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Кнопки 2x2 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginBottom="24dp"
            android:useDefaultMargins="true">

            <Button
                android:id="@+id/btnSchedule"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="Расписание"
                android:background="@drawable/button_background"
                android:textColor="#333333"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDiary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="Дневник"
                android:background="@drawable/button_background"
                android:textColor="#333333"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSetGoal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="Достижения"
                android:background="@drawable/button_background"
                android:textColor="#333333"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnTips"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="Советы"
                android:background="@drawable/button_background"
                android:textColor="#333333"
                android:textStyle="bold" />
        </GridLayout>

        <!-- Записи по дням -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Записи по дням"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:textColor="#333333" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ДЕК\n24"
                android:textColor="#333333"
                android:background="@drawable/day_background"
                android:padding="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ДЕК\n25"
                android:textColor="#333333"
                android:background="@drawable/day_background"
                android:padding="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ДЕК\n26"
                android:textColor="#333333"
                android:background="@drawable/day_background"
                android:padding="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ДЕК\n27"
                android:textColor="#333333"
                android:background="@drawable/day_background"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Статьи -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Статьи"
            android:layout_marginBottom="16dp"
            android:textSize="18sp"
            android:textColor="#333333" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <View
                android:id="@+id/article1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/article_background"
                android:layout_margin="8dp" />

            <View
                android:id="@+id/article2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/article_background"
                android:layout_margin="8dp" />

            <View
                android:id="@+id/article3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/article_background"
                android:layout_margin="8dp" />
        </LinearLayout>

        <!-- Кнопка выхода -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выйти из аккаунта"
            android:background="@drawable/button_background"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
