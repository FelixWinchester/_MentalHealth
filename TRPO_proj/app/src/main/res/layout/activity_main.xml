<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5EFE3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Приветствие -->
        <TextView
            android:id="@+id/greetingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добрый день, Пользователь"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Кнопки 2x2 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginBottom="16dp"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <Button
                android:id="@+id/btnSchedule"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="Расписание"
                android:background="#E0E0E0"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnDiary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="Дневник"
                android:background="#E0E0E0"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnSetGoal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="Достижения"
                android:background="#E0E0E0"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnTips"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="Советы"
                android:background="#E0E0E0"
                android:textColor="#000000" />
        </GridLayout>

        <!-- Остальной интерфейс -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Записи по дням"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ОКТ\n24"
                android:gravity="center"
                android:background="#E0E0E0"
                android:padding="8dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ОКТ\n25"
                android:gravity="center"
                android:background="#E0E0E0"
                android:padding="8dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ОКТ\n26"
                android:gravity="center"
                android:background="#E0E0E0"
                android:padding="8dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ОКТ\n27"
                android:gravity="center"
                android:background="#E0E0E0"
                android:padding="8dp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Статьи -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Статьи"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/article1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#E0E0E0"
                android:layout_margin="4dp" />

            <View
                android:id="@+id/article2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#E0E0E0"
                android:layout_margin="4dp" />

            <View
                android:id="@+id/article3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#E0E0E0"
                android:layout_margin="4dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
